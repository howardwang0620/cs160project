<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.guest.myapplication"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="27" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <!-- To perform network requests to the external server -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/AppTheme" >
        <activity android:name="com.example.guest.askSJSU.InitialLoginActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.guest.askSJSU.RegisterActivity"
            android:parentActivityName="com.example.guest.askSJSU.InitialLoginActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="InitialLoginActivity" />
        </activity>
        <activity
            android:name="com.example.guest.askSJSU.QuestionCreationActivity"
            android:parentActivityName="com.example.guest.askSJSU.HomePageActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="HomePageActivity" />
        </activity>
        <activity
            android:name="com.example.guest.askSJSU.VoteActivity"
            android:parentActivityName="com.example.guest.askSJSU.HomePageActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="HomePageActivity" />
        </activity>
        <activity
            android:name="com.example.guest.askSJSU.HomePageActivity"
            android:label="@string/title_activity_home_page_nav_drawer"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.example.guest.askSJSU.PostHistoryActivity"
            android:parentActivityName="com.example.guest.askSJSU.HomePageActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".HomePageActivity" />
        </activity>

        <provider
            android:name="com.android.tools.ir.server.InstantRunContentProvider"
            android:authorities="com.example.guest.myapplication.com.android.tools.ir.server.InstantRunContentProvider"
            android:multiprocess="true" />
    </application>

</manifest>